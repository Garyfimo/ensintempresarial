<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:padding="@dimen/normal">


    <empresarial.synapsesdk.com.widget.TextViewFont
        android:id="@+id/recursos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/bar_menu"
        android:textSize="30dp" />

    <empresarial.synapsesdk.com.widget.TextViewFont
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recursos_title"
        android:text="CANTIDAD: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <empresarial.synapsesdk.com.widget.TextViewFont
        android:id="@+id/recursos_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recursos_title"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:paddingLeft="15dp"
        android:paddingRight="30dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bar_menu" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mini"
        android:layout_below="@+id/recursos_cantidad">

        <LinearLayout
            android:id="@+id/linear_layout_recursos_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</RelativeLayout>
