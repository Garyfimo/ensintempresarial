<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:id="@+id/plan_row"
    android:layout_margin="3dp"
    android:padding="2dp">

    <empresarial.synapsesdk.com.widget.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/titles_project"
        android:text="Large Text"
        android:id="@+id/text_plan_title"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Del"
        android:id="@+id/textView2"
        android:layout_below="@+id/text_plan_title"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_plan_fecha_desde"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_below="@+id/text_plan_title"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="al"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/text_plan_fecha_desde"
        android:layout_toRightOf="@+id/text_plan_fecha_desde"
        android:layout_toEndOf="@+id/text_plan_fecha_desde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/rendimiento"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <empresarial.synapsesdk.com.widget.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avance"
        android:id="@+id/textView6"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_below="@+id/text_plan_fecha_desde"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/progress_bar_plan"
        android:layout_below="@+id/textView6"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:scrollbarSize="@dimen/normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <empresarial.synapsesdk.com.widget.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hitos: "
        android:id="@+id/textView9"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progress_bar_plan"
        android:layout_alignLeft="@+id/progress_bar_plan"
        android:layout_alignStart="@+id/progress_bar_plan" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_plan"
        android:layout_below="@+id/textView9"
        android:paddingTop="@dimen/mini"
        android:paddingLeft="@dimen/normal"
        android:paddingRight="@dimen/normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
