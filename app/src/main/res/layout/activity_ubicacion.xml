<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navdrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="empresarial.synapsesdk.com.activity.DescriptionActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/normal"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <empresarial.synapsesdk.com.widget.TextViewFont
                android:id="@+id/ubicacion_title"
                android:textColor="@color/bar_menu"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginBottom="@dimen/small"/>

            <TextView
                android:layout_marginBottom="@dimen/small"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/ubicacion_title"
                android:id="@+id/ubicacion_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_below="@+id/ubicacion_descripcion"
                android:id="@+id/ubicacion_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </RelativeLayout>


    </FrameLayout>

    <include layout="@layout/navdrawer_for_ab_overlay" />

</android.support.v4.widget.DrawerLayout>
