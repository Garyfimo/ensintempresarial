<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navdrawer"
    tools:context="empresarial.synapsesdk.com.activity.DescriptionActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <empresarial.synapsesdk.com.widget.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/ubicacion_title"
                android:textColor="@color/bar_menu"
                android:textSize="40dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:id="@+id/ubicacion_image"/>

            <empresarial.synapsesdk.com.widget.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ubicacion_descripcion"
                android:textColor="@color/bar_menu" />

</LinearLayout>


    </FrameLayout>

    <include layout="@layout/navdrawer_for_ab_overlay" />

</android.support.v4.widget.DrawerLayout>
