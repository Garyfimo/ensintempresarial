<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="empresarial.synapsesdk.com.activity.ProgressActivity"
    android:background="@color/silver">

    <TableLayout
        android:id="@+id/Tabla"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:stretchColumns="3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="280dp">

        <TableRow
            android:id="@+id/cabecera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"

                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="INVERTIDO"
                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/restante_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="FALTANTE"
                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="TOTAL"
                android:textColor="#005500"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:id="@+id/SeparadorCabecera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/LineaCabecera"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_span="6"
                android:background="#FFFFFF" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/Fila1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/servicios_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="SERVICIOS"
                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_servicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/faltante_servicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_servicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/materiales_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5px"
                android:text="MATERIALES"
                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_materiales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/faltante_materiales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_materiales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/licencias_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="LICENCIAS"
                android:textColor="#005500"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_licencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/faltante_licencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_licencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/salarios_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALARIOS"
                android:textColor="#005500"
                android:padding="5px"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_salarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/faltante_salarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_salarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/SeparadorTotales"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/LineaTotales"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_span="5"
                android:background="#FFFFFF" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/Totales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="right"
                android:text="Total"
                android:textColor="#0000CC"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/invertido_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/faltante_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
