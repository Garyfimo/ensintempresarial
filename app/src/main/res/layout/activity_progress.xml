<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navdrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="50dp">

        <empresarial.synapsesdk.com.widget.TextViewFont
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal"
            android:text="@string/inversion_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/bar_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="@string/inversion_desc"
            android:textAppearance="?android:textAppearanceMedium" />

        <TableLayout
            android:id="@+id/Tabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:stretchColumns="3">

            <TableRow
                android:id="@+id/cabecera"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/xxlarge"
                android:padding="@dimen/small">

                <empresarial.synapsesdk.com.widget.TextViewFont

                    android:layout_width="0dp"
                    android:layout_height="@dimen/xxlarge"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:text="INVERTIDO"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/restante_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="30dp"
                    android:text="FALTANTE"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="30dp"
                    android:text="TOTAL"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />


            </TableRow>

            <TableRow
                android:id="@+id/SeparadorCabecera"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/LineaCabecera"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_span="6"
                    android:background="#FFFFFF"></FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/Fila2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/table_row_1"
                android:padding="@dimen/small">

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/materiales_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5px"
                    android:text="MATERIALES"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_materiales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/faltante_materiales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_materiales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/Fila3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/table_row_2"
                android:padding="@dimen/small">

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/licencias_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5px"

                    android:text="LICENCIAS"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_licencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/faltante_licencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_licencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/Fila4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/table_row_1"
                android:padding="@dimen/small">


                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/salarios_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5px"
                    android:text="SALARIOS"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_salarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/faltante_salarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_salarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/Fila1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/table_row_2"
                android:padding="@dimen/small"
                android:weightSum="4">

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/servicios_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5px"
                    android:text="SERVICIOS"
                    android:textColor="@color/table_header"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_servicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/faltante_servicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_servicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/SeparadorTotales"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/LineaTotales"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_span="5"
                    android:background="#FFFFFF"></FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/Totales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_row_1"
                android:padding="@dimen/small">

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/TextoTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Total"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/invertido_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/faltante_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />

                <empresarial.synapsesdk.com.widget.TextViewFont
                    android:id="@+id/total_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="78000"
                    android:textSize="30sp" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <include layout="@layout/navdrawer_for_ab_overlay" />

</android.support.v4.widget.DrawerLayout>
