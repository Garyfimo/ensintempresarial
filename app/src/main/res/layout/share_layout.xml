<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="600dp">


    <RadioGroup
        android:id="@+id/radio_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="103dp">

         <RadioButton
            android:id="@+id/radio_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV"
            android:layout_marginLeft="40dp"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Agregar"
        android:id="@+id/textView"
        android:layout_toStartOf="@+id/radio_share"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/radio_share"
        android:layout_toLeftOf="@+id/radio_share" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Destinos"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginRight="90dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView" />
    <GridView
        android:numColumns="5"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="70dp"
        android:id="@+id/grid_share">
        </GridView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/button_enviar"
        android:layout_below="@+id/grid_share"
        android:layout_alignRight="@+id/radio_share"
        android:layout_alignEnd="@+id/radio_share"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button_cancelar"
        android:layout_alignTop="@+id/button_enviar"
        android:layout_toRightOf="@+id/textView" />

    <AutoCompleteTextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/radio_share"
        android:layout_alignStart="@+id/radio_share" />

</RelativeLayout>
