<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navdrawer"
    tools:context="empresarial.synapsesdk.com.activity.DescriptionActivity">

<FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridView
        android:id="@+id/recursos_gridview"
        android:clipToPadding="false"
        android:numColumns="3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:horizontalSpacing="@dimen/normal"
        android:verticalSpacing="@dimen/normal"
        android:paddingTop="25dp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </FrameLayout>

    <include layout="@layout/navdrawer_for_ab_overlay" />

</android.support.v4.widget.DrawerLayout>

